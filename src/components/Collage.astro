<style>
    /* MOBIL */
    @media screen and (max-width: 768px) {
    .grid_collage {
        display: grid;
        grid-template-columns: 1fr 1fr;
        grid-template-rows: 1fr 1fr;
        margin: 50px;
    }
    .grid_collage img {
            width: 100%; /* Gør billederne responsive */
            height: auto; /* Bevarer billedets proportioner */
            display: block; /* Fjerner mellemrum under billederne */
        }

    /* Specifikke størrelser til forskudte billeder */
        .pic1 { grid-column: 2 / span 1; grid-row: 1/ span 1; }
        .pic2  { grid-column: span 1; grid-row: span 1; }
        .pic3 { grid-column: 2 / span 1; grid-row: 2 / span 1; }
        .pic4 { grid-column: span 1; grid-row: 2 / span 1; }
    .tekst {
       margin-left: 4rem;
