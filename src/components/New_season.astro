<h2 id="bold">NEW SEASON</h2>

<div class="explore_n_carousel">
  <p>Explore our lastest arrivals</p>
  <div class="container">
    <div class="carousel-view">
      <button id="prev-btn" class="prev-btn">
        <img src="../../public/pil.png" alt="" />
      </button>
      <div id="item-list" class="item-list">
        <img id="item" class="item" src="https://images.unsplash.com/photo-1662466818758-0e299f92591a?crop=entropy&cs=tinysrgb&fm=jpg&ixid=MnwzMjM4NDZ8MHwxfHJhbmRvbXx8fHx8fHx8fDE2NjQ3ODc1NDY&ixlib=rb-1.2.1&q=80" />
        <img id="item" class="item" src="https://images.unsplash.com/photo-1662466818758-0e299f92591a?crop=entropy&cs=tinysrgb&fm=jpg&ixid=MnwzMjM4NDZ8MHwxfHJhbmRvbXx8fHx8fHx8fDE2NjQ3ODc1NDY&ixlib=rb-1.2.1&q=80" />
        <img id="item" class="item" src="https://images.unsplash.com/photo-1662466818758-0e299f92591a?crop=entropy&cs=tinysrgb&fm=jpg&ixid=MnwzMjM4NDZ8MHwxfHJhbmRvbXx8fHx8fHx8fDE2NjQ3ODc1NDY&ixlib=rb-1.2.1&q=80" />
        <img id="item" class="item" src="https://images.unsplash.com/photo-1662466818758-0e299f92591a?crop=entropy&cs=tinysrgb&fm=jpg&ixid=MnwzMjM4NDZ8MHwxfHJhbmRvbXx8fHx8fHx8fDE2NjQ3ODc1NDY&ixlib=rb-1.2.1&q=80" />
        <img id="item" class="item" src="https://images.unsplash.com/photo-1662466818758-0e299f92591a?crop=entropy&cs=tinysrgb&fm=jpg&ixid=MnwzMjM4NDZ8MHwxfHJhbmRvbXx8fHx8fHx8fDE2NjQ3ODc1NDY&ixlib=rb-1.2.1&q=80" />
        <img id="item" class="item" src="https://images.unsplash.com/photo-1662466818758-0e299f92591a?crop=entropy&cs=tinysrgb&fm=jpg&ixid=MnwzMjM4NDZ8MHwxfHJhbmRvbXx8fHx8fHx8fDE2NjQ3ODc1NDY&ixlib=rb-1.2.1&q=80" />
        <img id="item" class="item" src="https://images.unsplash.com/photo-1662466818758-0e299f92591a?crop=entropy&cs=tinysrgb&fm=jpg&ixid=MnwzMjM4NDZ8MHwxfHJhbmRvbXx8fHx8fHx8fDE2NjQ3ODc1NDY&ixlib=rb-1.2.1&q=80" />
      </div>
      <button id="next-btn" class="next-btn"> <img src="../../public/pil.png" alt="" /> </button>
    </div>
  </div>
</div>

<style>
  h2 {
    padding-left: 4%;
  }

  img {
    width: 80%;
  }

  .explore_n_carousel {
    display: flex;
  }

  p {
    display: flex;
    align-items: end;
    width: 100%;
    margin-bottom: 7%;
    z-index: 1;
    padding-left: 4%;
  }

  button {
    border: none;
    cursor: pointer;
    color: white;
    background: none;
    transition: all 0.3s ease-in-out;
  }

  .container {
    width: 100%;
    display: flex;
    justify-content: end;
    align-items: center;
    padding-right: 5%;
  }

  .carousel-view {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 10px;
    transition: all 0.25s ease-in;
  }

  .carousel-view .item-list {
    max-width: 1150px;
    width: 79vw;
    padding: 50px 10px;
    display: flex;
    gap: 20px;
    -ms-overflow-style: none; /* IE and Edge */
    scrollbar-width: none; /* Firefox */
    overflow: auto;
    scroll-snap-type: x mandatory;
  }

  /* Hide scrollbar for Chrome, Safari and Opera */
  .item-list::-webkit-scrollbar {
    display: none;
  }

  .prev-btn {
    cursor: pointer;
    transform: rotate(180deg);
  }

  .next-btn {
    cursor: pointer;
    position: absolute;
    left: 93%;
  }

  .item {
    min-width: 350px;
    height: 425px;
  }
</style>

<script>
  const prev = document.getElementById("prev-btn");
  const next = document.getElementById("next-btn");
  const list = document.getElementById("item-list");

  const itemWidth = 150;
  const padding = 10;

  prev.addEventListener("click", () => {
    list.scrollLeft -= itemWidth + padding;
  });

  next.addEventListener("click", () => {
    list.scrollLeft += itemWidth + padding;
  });
</script>
