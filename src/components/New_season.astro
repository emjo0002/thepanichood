<section>
  <h2 id="bold">NEW SEASON</h2>
  <img src="../../public/ikoner/pil_forside.png" alt="pil_forside" class="pil_forside" />

  <div class="explore_n_carousel">
    <p>Explore our lastest arrivals</p>
    <div class="container">
      <div class="carousel-view">
        <div id="item-list" class="item-list">
          <img id="item" class="item" src="https://images.unsplash.com/photo-1662466818758-0e299f92591a?crop=entropy&cs=tinysrgb&fm=jpg&ixid=MnwzMjM4NDZ8MHwxfHJhbmRvbXx8fHx8fHx8fDE2NjQ3ODc1NDY&ixlib=rb-1.2.1&q=80" />
          <img id="item" class="item" src="https://images.unsplash.com/photo-1662466818758-0e299f92591a?crop=entropy&cs=tinysrgb&fm=jpg&ixid=MnwzMjM4NDZ8MHwxfHJhbmRvbXx8fHx8fHx8fDE2NjQ3ODc1NDY&ixlib=rb-1.2.1&q=80" />
          <img id="item" class="item" src="https://images.unsplash.com/photo-1662466818758-0e299f92591a?crop=entropy&cs=tinysrgb&fm=jpg&ixid=MnwzMjM4NDZ8MHwxfHJhbmRvbXx8fHx8fHx8fDE2NjQ3ODc1NDY&ixlib=rb-1.2.1&q=80" />
          <img id="item" class="item" src="https://images.unsplash.com/photo-1662466818758-0e299f92591a?crop=entropy&cs=tinysrgb&fm=jpg&ixid=MnwzMjM4NDZ8MHwxfHJhbmRvbXx8fHx8fHx8fDE2NjQ3ODc1NDY&ixlib=rb-1.2.1&q=80" />
          <img id="item" class="item" src="https://images.unsplash.com/photo-1662466818758-0e299f92591a?crop=entropy&cs=tinysrgb&fm=jpg&ixid=MnwzMjM4NDZ8MHwxfHJhbmRvbXx8fHx8fHx8fDE2NjQ3ODc1NDY&ixlib=rb-1.2.1&q=80" />
          <img id="item" class="item" src="https://images.unsplash.com/photo-1662466818758-0e299f92591a?crop=entropy&cs=tinysrgb&fm=jpg&ixid=MnwzMjM4NDZ8MHwxfHJhbmRvbXx8fHx8fHx8fDE2NjQ3ODc1NDY&ixlib=rb-1.2.1&q=80" />
          <img id="item" class="item" src="https://images.unsplash.com/photo-1662466818758-0e299f92591a?crop=entropy&cs=tinysrgb&fm=jpg&ixid=MnwzMjM4NDZ8MHwxfHJhbmRvbXx8fHx8fHx8fDE2NjQ3ODc1NDY&ixlib=rb-1.2.1&q=80" />
        </div>
        <button id="next-btn" class="next-btn"> <img src="../../public/ikoner/pil.png" alt="" /> </button>
      </div>
    </div>
  </div>
</section>

<style>
  section {
    padding-top: 5%;
    padding-bottom: 5%;
  }
  .pil_forside {
    width: 325px;
    position: absolute;
    left: 7%;
    z-index: 1;
  }
  h2 {
    padding-left: 4%;
    position: relative;
  }

  img {
    width: 80%;
    background-color: transparent;
  }

  .explore_n_carousel {
    display: flex;
  }

  p {
    position: relative;
    top: 300px;
    left: 5%;
    width: 20%;
    height: 20%;
    font-size: 2.3cqw;
  }

  button {
    border: none;
    cursor: pointer;
    color: white;
    background: none;
    transition: all 0.3s ease-in-out;
  }

  .container {
    width: 100%;
    display: flex;
    justify-content: end;
    align-items: center;
    padding-right: 5%;
  }

  .carousel-view {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 10px;
    transition: all 0.25s ease-in;
  }

  .carousel-view .item-list {
    max-width: 1025px;
    width: 67vw;
    padding: 85px 10px;
    display: flex;
    gap: 20px;
    -ms-overflow-style: none; /* IE and Edge */
    scrollbar-width: none; /* Firefox */
    overflow: auto;
    scroll-snap-type: x mandatory;
  }

  /* Hide scrollbar for Chrome, Safari and Opera */
  .item-list::-webkit-scrollbar {
    display: none;
  }
  .next-btn {
    cursor: pointer;
    position: absolute;
    left: 93%;
    z-index: 1;
  }

  .item {
    min-width: 325px;
    height: 400px;
  }
</style>

<script>
  const next = document.getElementById("next-btn");
  const list = document.getElementById("item-list");

  const itemWidth = 150;
  const padding = 10;

  next.addEventListener("click", () => {
    list.scrollLeft += itemWidth + padding;
  });
</script>
