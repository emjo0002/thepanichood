<style>
  * {
    box-sizing: border-box;
    margin: 0 auto;
    background-color: #525148;
    color: #fefefe;
    padding: 3%;
  }
  img {
    width: 30%;
    height: auto;
    display: block;
  }

  .button{
    border: none;
  }
  .bold_p {
    font-weight: bolder;
    
  }

  .ikoner {
    display: flex;
    padding: 0%;
    margin: 0%;
    max-width: 50%;
    align-items: center;
    
  }

  .grid_footer2 {
   margin-left: 10%;
  }
  
  .tiktok {
    margin-top: 1rem;
  }

  @media (min-width: 800px) {
    .grid {
      display: grid;
      grid-template-columns: 1fr 1fr 1fr;
    }

    .grid_footer2 img {
      width: 50px;
    }

    .grid_footer1 {
      order: 2;
    }

    .grid_footer2 {
      order: 3;
    }

    .grid_footer3 {
      order: 1;
    }
  }
</style>
