---
import "../styles/global.css";
import "../styles/style.css";
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Hero_video from "../components/Hero_video.astro";
import Quote from "../components/Quote.astro";
import New_season from "../components/New_season.astro";
import Footer from "../components/Footer.astro"
import Collage from "../components/Collage.astro"
import GetInspired from "../components/Get_inspired.astro";
---

<Layout title="PanicHood">
  <main>
    <Header />
    <Tenoff />
    <Hero_video />
    <New_season />
    <Quote />
    <Collage />
<Footer />
  </main>

  <Collage />
  <Footer />
</Layout>

<style>
  .grid-container {
    display: grid;
    grid-template-columns: 2fr 1fr;
    grid-template-rows: auto auto;
  }

.item img {
  width: 100%;
  height: auto;
  
}

  .item1 {
    grid-column: 1 / span 1;
    grid-row: 1 / span 2;
  }

  .item2 {
    grid-column: 2 / span 1;
    grid-row: 1 / span 1;
  }

  .item3 {
    grid-column: 2 / span 1;
    grid-row: 2 / span 1;
  }

  .community {
    display: grid;
    grid-template-columns: 1fr 1fr;
  }

  .grid_values {
    margin: 2rem;
    grid-column: 1 / span 2;
    grid-row: 2 / span 1;
  }

  .img_community {
    width: 90%;
  }

  .text_impact {
    margin-top: 2rem;
    width: 90%;
    align-content: end;
    width: 60%;
  }

  .impact {
    margin-top: 2rem;
    display: flex;
    justify-content: flex-end;
  }

  .being_yourself {
    display: grid;
    grid-template-columns: 1fr 1fr;
    margin-top: 2rem;
  }

  @media (min-width: 800px) {
    .grid-container {
      display: grid;
      grid-template-columns: 1fr 1fr;
    }

    .grid_1-1 {
      display: grid;
      grid-template-columns: 1fr 1fr;
    }

    .item2 {
      grid-column: 2 / span 1;
      grid-row: 1 / span 1;
    }

    .item3 {
      grid-column: 1 / span 1;
      grid-row: 1 / span 1;
    }

    .grid_values {
      grid-column: 2 / span 1;
      grid-row: 2 / span 1;
    }

    .impact {
      margin-top: 0%;
      display: inline;
    
    }

    .text_impact {
      margin-bottom: 2rem;
    }

    .being_yourself {
      display: inline;
    }

    .text_being_yourself {
      width: 60%;
    }

    .grid_values p,
    h2 {
      margin: 0%;
    }

    .community {
      
    }

    .img_community {
      width: 60%;
      display: flex;
      justify-content: flex-end;
    }
  }
</style>

